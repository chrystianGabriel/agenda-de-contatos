<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="atualizar"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_atualizar"
            android:onClick="click_atualizar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
            android:text="Agenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"
    />
    <Button
            android:text="Adicionar"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_adicionar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="128dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:onClick="click_adicionar"/>
    <ListView
            android:layout_width="395dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/list_contatos" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_atualizar" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>